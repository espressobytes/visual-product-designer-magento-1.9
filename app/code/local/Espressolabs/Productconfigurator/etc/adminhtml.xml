<?xml version="1.0"?>

<config>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <espressoconfigurator>
                    <!-- This is how the ACL text will be displayed on System > Permissions > Roles > Role > Role Resources -->
                    <title>Espressolabs Product Configurator</title>
                    <sort_order>200</sort_order>
                </espressoconfigurator>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <esp_configurator_settings translate="title">
                                        <title>Espressolabs - Product configurator</title>
                                        <sort_order>50</sort_order>
                                    </esp_configurator_settings>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
</config>
